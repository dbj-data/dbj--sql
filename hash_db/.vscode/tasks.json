{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/DWINVER=0x0A00",
                "/D_WIN32_WINNT=0x0A00",
                /* NOTE: sqlite3 requires utf-8 by default */
                "/utf-8", 
                "/Id:/machine_wide",
                "/MDd",
                "/Zi",
                "/Fe:",
                "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                "${file}",
                "../sqlite3/sqlite3.c",
                "/link",
                "/VERSION:0.1"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "DEBUG BUILD"
        },
        {
            "type": "cppbuild",
            "label": "dll RELEASE build",
            "command": "cl.exe",
            "args": [
                "/nologo",
                "/DNDEBUG",
                "/MD",
                "/W2",
                "/TC",
                "/O2", "/Ot",
                "/std:c11",
                "${workspaceFolder}\\sha1.c",
                "../sqlite3/sqlite3.c",
                "-link",
                "-dll",
                "-out:${workspaceFolder}\\sha1.dll",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "SQLite extension DLL"
        }
    ],
    "version": "2.0.0"
}