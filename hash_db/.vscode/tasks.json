{
    "tasks": [
        {
            /*
            1.
            double check you have started from 
            [vcvarsall.bat] Environment initialized for: 'x64' !
            2.
            not all options are supported
            https://clang.llvm.org/docs/UsersManual.html#clang-cl
            */
            "type": "cppbuild",
            "label": "build active file",
            "command": "D:/PROD/programs/Microsoft Visual Studio/2019/Community/VC/Tools/Llvm/x64/bin/clang-cl.exe",
            "args": [
                "/W3",
                "/TC", /* Treat all source files as C */
                /* this does not work: "/std:c11", */
                /* but this does */ "/clang:-std=c99", 
                "/DWINVER=0x0A00",
                "/D_WIN32_WINNT=0x0A00",
                /* NOTE: sqlite3 requires utf-8 by default */
                "/utf-8", 
                "/Id:/machine_wide",
                "/MTd", /* static runtime lib */ 
                /* "/Zi", include this for debug builds */
                "${file}",
                "${fileDirname}\\bin\\sqlite3.lib",
                /* it is #include , "../sqlite3/sqlite3.c", */
                /* could not make clang-cl understand /Fe: */
                /* also had to place it as the last arg before /link */
                "/o${fileDirname}\\bin\\${fileBasenameNoExtension}.exe",
                "/link",
                "/VERSION:0.2", 
                "/SUBSYSTEM:CONSOLE" 
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "DEBUG BUILD"
        },
        {
            "type": "cppbuild",
            "label": "dll RELEASE build",
            "command": "cl.exe",
            "args": [
                "/nologo",
                "/DNDEBUG",
                "/MD",
                "/W2",
                "/TC",
                "/O2", "/Ot",
                "/std:c11",
                "${workspaceFolder}\\sha1.c",
                "../sqlite3/sqlite3.c",
                "-link",
                "-dll",
                "-out:${workspaceFolder}\\sha1.dll",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "SQLite extension DLL"
        }
    ],
    "version": "2.0.0"
}